{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://smart-assistant.local/schemas/tool-call.schema.json",
  "title": "ToolCall",
  "type": "object",
  "required": ["tool_name"],
  "properties": {
    "tool_name": {
      "type": "string",
      "minLength": 1,
      "description": "Whitelisted tool name, e.g. home.lights.on"
    },
    "arguments": {
      "type": "object",
      "default": {},
      "additionalProperties": true
    },
    "trace_id": {
      "type": "string",
      "description": "Distributed trace id"
    }
  },
  "additionalProperties": false
}
